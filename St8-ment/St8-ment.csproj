<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;netstandard2.1;net50;net6.0</TargetFrameworks>
    <RootNamespace>St8Ment</RootNamespace>
    <Authors>Emprax</Authors>
    <Description>A library to add a flexible SOLID versions of the State Pattern and StateMachine Pattern.</Description>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <PackageLicenseExpression></PackageLicenseExpression>
    <PackageIcon>St8-ment-logo.png</PackageIcon>
    <RepositoryUrl>https://github.com/emprax/St8-ment</RepositoryUrl>
    <PackageTags>state,statemachine,state-machine,redux</PackageTags>
    <Version>3.0.0</Version>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <LangVersion>latest</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\docs\St8-ment-logo.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
    <None Include="..\LICENSE">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="SpeciFire" Version="1.0.1" />
  </ItemGroup>

</Project>
